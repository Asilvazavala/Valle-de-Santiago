---
import Footer from '../components/Shared/Footer.astro';
import Header from '../components/Shared/Header/Header.astro';
import Navbar from '../components/Shared/Navbar/Navbar.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="favicon.ico" />
		<!-- Box Icons -->
		<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
		<!-- Google Fonts -->
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Montserrat+Alternates:wght@400;500;700&display=swap" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light;
	}

	html {
		background: #fff;
		background-size: 224px;
	}

	html, body {
		font-family: 'Montserrat', sans-serif;
	}

	section {
		margin: 0 64px;
	}

	.containerSpace {
		width: 80%;
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
	}

	@media screen and (width < 768px) {
		section {
			margin: 0 16px;
		}
	}

	@media screen and (width > 1700px) {
		.containerSpace {
			max-width: 1500px;
		}
	}

	@media screen and (width > 2200px) {
		.containerSpace {
			max-width: 2000px;
		}
	}

	@media screen and (width > 2700px) {
		.containerSpace {
			max-width: 2500px;
		}
	}
</style>
