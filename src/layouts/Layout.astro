---
import Footer from '../components/Shared/Footer.astro';
import Navbar from '../components/Shared/Navbar/Navbar.tsx';
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Primer pÃ¡gina oficial en Valle de Santiago" />
		<meta name="viewport" content="width=device-width" />
		<meta property="og:image" content="/favicon.ico">
		<meta property="og:title" content="Valle de Santiago">
		<meta property="og:url" content="https://valledesantiago.vercel.app/">
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<!-- Box Icons -->
		<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
		<!-- Google Fonts -->
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Montserrat+Alternates:wght@400;500;700&display=swap" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Navbar client:visible />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light;
		--swiper-navigation-color: rgba(0,0,0,.7);
	}

	::-webkit-scrollbar {
  width: 12px;
}

::-webkit-scrollbar-thumb {
  background-color: #304D30; 
  border-radius: 6px;
}

	html {
		background: #fff;
		background-size: 224px;
		scroll-behavior: smooth;
	}

	html, body {
		font-family: 'Montserrat', sans-serif;
	}

	section {
		margin: 0 64px;
	}

	.containerSpace {
		width: 80%;
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
	}

	.mySwiper .swiper-slide-thumb-active {
  	opacity: 1;
	}

	.scrollAnimation {
		animation: reveal linear both;
		animation-timeline: view();
		animation-range: entry 10% cover 40%;
	}

	.scrollAnimationTitle {
		animation: enhance-header linear both;
		animation-timeline: scroll(root);
		animation-range: 0 200px;
	}

	@keyframes reveal {
  from {
    opacity: 0;
    transform: translateY(70px) scale(0.5);
  }

  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes enhance-header {
  to {
    background: rgba(0, 0, 0, .01);
    backdrop-filter: blur(5px);
  }
}

	@media screen and (width < 800px) {
		section {
			margin: 0 16px;
		}

		.containerSpace {
			width: 90%;
		}
	}

	@media screen and (width > 1700px) {
		.containerSpace {
			max-width: 1500px;
		}
	}

	@media screen and (width > 2200px) {
		.containerSpace {
			max-width: 2000px;
		}
	}

	@media screen and (width > 2700px) {
		.containerSpace {
			max-width: 2500px;
		}
	}
</style>
